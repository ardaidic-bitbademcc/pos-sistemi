# Production Environment Variables

# Database Connection
DATABASE_URL="postgresql://pos_user:YOUR_PASSWORD_HERE@localhost:5432/pos_system_db"

# Server Configuration
PORT=3001
NODE_ENV=production

# JWT Secret (openssl rand -base64 32 ile oluşturun)
JWT_SECRET="REPLACE_WITH_STRONG_SECRET_KEY"

# CORS Configuration
CORS_ORIGIN="https://yourdomain.com"

# Optional: Multiple origins (comma separated)
# CORS_ORIGIN="https://yourdomain.com,https://www.yourdomain.com"

# Optional: Logging
LOG_LEVEL=info

# Optional: Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Optional: Session
SESSION_SECRET="REPLACE_WITH_ANOTHER_SECRET"

# Optional: Email (eğer email notification kullanıyorsanız)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# Optional: Cloud Storage (eğer dosya upload varsa)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=eu-central-1
# AWS_S3_BUCKET=

# Optional: Redis (eğer cache kullanıyorsanız)
# REDIS_URL=redis://localhost:6379
