# Production Environment Variables
# Supabase veritabanına geçtikten sonra bu dosyayı .env olarak kopyalayın

# ==============================================
# DATABASE (Supabase PostgreSQL)
# ==============================================
# Supabase Dashboard → Settings → Database → Connection String → URI
DATABASE_URL="postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:6543/postgres?pgbouncer=true"
DIRECT_URL="postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres"

# ==============================================
# SUPABASE API
# ==============================================
# Supabase Dashboard → Settings → API
SUPABASE_URL="https://[YOUR-PROJECT-REF].supabase.co"
SUPABASE_ANON_KEY="your-anon-public-key-here"
SUPABASE_SERVICE_KEY="your-service-role-secret-key-here"

# ==============================================
# AUTHENTICATION
# ==============================================
# Supabase Dashboard → Settings → API → JWT Secret
JWT_SECRET="your-supabase-jwt-secret-here"
JWT_EXPIRES_IN="30d"

# ==============================================
# SERVER CONFIG
# ==============================================
PORT=3001
NODE_ENV=production

# Frontend URL (CORS için)
CORS_ORIGIN="https://your-production-domain.com"
# Birden fazla domain için: "https://domain1.com,https://domain2.com"

# ==============================================
# TERMAL YAZICI (Gelecek için)
# ==============================================
# PRINTER_ENABLED=true
# PRINTER_DEFAULT_IP="192.168.1.100"
# PRINTER_PORT=9100

# ==============================================
# EMAIL (Bildirimler için - opsiyonel)
# ==============================================
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT=587
# SMTP_USER="your-email@gmail.com"
# SMTP_PASS="your-app-password"
# EMAIL_FROM="POS System <noreply@yourpos.com>"

# ==============================================
# MONITORING (Opsiyonel)
# ==============================================
# SENTRY_DSN="https://xxx@sentry.io/xxx"
# LOGROCKET_APP_ID="your-app-id"

# ==============================================
# CLOUD STORAGE (Ürün görselleri için - opsiyonel)
# ==============================================
# Supabase Storage (varsayılan)
# STORAGE_BUCKET="product-images"
# veya
# AWS_S3_BUCKET="your-bucket"
# AWS_ACCESS_KEY="your-key"
# AWS_SECRET_KEY="your-secret"

# ==============================================
# RATE LIMITING
# ==============================================
RATE_LIMIT_WINDOW_MS=900000  # 15 dakika
RATE_LIMIT_MAX_REQUESTS=100   # 15 dakikada max 100 istek

# ==============================================
# SESSION
# ==============================================
SESSION_SECRET="your-very-long-random-session-secret-key-change-this"
SESSION_MAX_AGE=86400000  # 24 saat (milliseconds)

# ==============================================
# BACKUP
# ==============================================
AUTO_BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30
